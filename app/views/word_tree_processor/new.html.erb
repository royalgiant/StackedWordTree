<div class="col-md-12">
	<% flash.each do |key, value| %>
		<div class="alert alert-<%= key %> col-md-8 col-md-offset-2"><%= value %></div>
	<% end %>
	<div class="col-md-4 col-md-offset-4">
		<h1 class="text-xs-center">Upload Wordlist File</h1>
		<center>
			<%= form_tag "/word_tree_processor", multipart: true do %>
				<p class="fileName"></p>
				<span class="btn btn-secondary btn-file">
					<%= file_field_tag "file" %>
					<span>Browse</span>
				</span>
			    <%= submit_tag "Upload", class: "btn btn-primary" %>
			<% end %>
		</center>
	</div>
</div>